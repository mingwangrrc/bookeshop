<h1 class="text-3xl font-bold mb-4">Authors</h1>

<%= search_form_for @q, url: authors_path, method: :get, class: "mb-5" do |f| %>
  <div class="form-group mb-4">
    <%= f.label :name_cont, "Search by name", class: "block text-sm font-medium text-gray-700" %>
    <%= f.search_field :name_cont, class: "form-control mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
  </div>
  <div class="form-group">
    <%= f.submit 'Search', class: "btn" %>
  </div>
<% end %>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.name %></td>
        <td><%= link_to 'Show', author_path(author) %></td>
      </tr>
    <% end %>
  </tbody>
</table>