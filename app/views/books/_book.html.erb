<%= link_to book do %>
  <div id="<%= dom_id book %>">
    <%= image_tag book.images.first, class: "w-full h-80 object-cover rounded-lg hover:brightness-75 transition-all duration-250" if book.images.any? %>
    <p class="text-lg text-black-50"> <%= book.title %> </p>
    <p class="text-lg text-gray-100"> <%= number_to_currency book.price %> </p>
  </div>
<% end %>